-##

-# Variables
- d = current_page.data

-# Layout - Calls Wrapper Layout
= wrap_layout "_library/bootstrap" do

    .container

        .row

            -# Navigation List
            .col-md-3

                -# Subnavigation
                = yield_content :sidebar

            -# Main Content
            .col-md-9.mainContent

                -# Breadcrumbs
                - if data.config.breadcrumbs
                    = partial "partial/_library/molecule/breadcrumb/breadcrumb.haml"

                -# Heading
                - if data.config.heading
                    = partial "partial/_library/molecule/heading/heading.haml", locals: { small: d.small, text: d.title }

                -# Details
                - if data.config.description
                    %p= string d.description

                -# Locals
                - if data.config.locals
                    = partial "partial/_library/organism/local/local.haml"

                -# Yield
                = yield

                -# Resources
                - if data.config.resources
                    = partial "partial/_library/organism/resource/resource.haml"

                -# Assets
                - if data.config.assets
                    = partial "partial/_library/organism/asset/asset.haml"

                -# Todo
                - if data.config.todo
                    = partial "partial/_library/organism/todo/todo.haml"